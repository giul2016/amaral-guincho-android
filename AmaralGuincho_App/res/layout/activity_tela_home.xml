<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amaralguincho_app.TelaHome" >

    <ImageView
        android:id="@+id/imgPerfilTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/lblBemVindoTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgPerfilTelaHome"
        android:layout_toRightOf="@+id/imgPerfilTelaHome"
        android:text="@string/lblBemVindoTelaHome"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lblNomeTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblBemVindoTelaHome"
        android:layout_below="@+id/lblBemVindoTelaHome"
        android:layout_marginLeft="14dp"
        android:text="@string/lblNomeTelaHome"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btnOrdemDeServicoTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgPerfilTelaHome"
        android:layout_marginTop="102dp"
        android:layout_toLeftOf="@+id/lblCodigoTelaConsultaOrdemDeServico"
        android:text="@string/btnOrdemDeServicoTelaHome" />

    <TextView
        android:id="@+id/lblCodigoTelaConsultaOrdemDeServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnOrdemDeServicoTelaHome"
        android:layout_toRightOf="@+id/imgPerfilTelaHome"
        android:text="@string/lblOrdemDeServicoTelaHome"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lblDescricaoOrdemDeServicoTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnOrdemDeServicoTelaHome"
        android:layout_toRightOf="@+id/btnOrdemDeServicoTelaHome"
        android:text="@string/lblDescricaoOrdemDeServicoTelaHome" />

    <Button
        android:id="@+id/btnMotoristaTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnOrdemDeServicoTelaHome"
        android:layout_alignRight="@+id/btnOrdemDeServicoTelaHome"
        android:layout_below="@+id/btnOrdemDeServicoTelaHome"
        android:layout_marginTop="33dp"
        android:text="@string/btnMotoristaTelaHome" />

    <TextView
        android:id="@+id/lblMotoristaTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblDescricaoOrdemDeServicoTelaHome"
        android:layout_alignTop="@+id/btnMotoristaTelaHome"
        android:text="@string/lblMotoristaTelaHome"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lblDescricaoMotoristaTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnMotoristaTelaHome"
        android:layout_alignLeft="@+id/lblMotoristaTelaHome"
        android:text="@string/lblDescricaoMotoristaTelaHome"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btnClientesTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMotoristaTelaHome"
        android:layout_alignRight="@+id/btnMotoristaTelaHome"
        android:layout_below="@+id/btnMotoristaTelaHome"
        android:layout_marginTop="38dp"
        android:text="@string/btnClientesTelaHome" />

    <TextView
        android:id="@+id/lblDescricaoClienteTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnClientesTelaHome"
        android:layout_alignLeft="@+id/lblClienteTelaHome"
        android:text="@string/lblDescricaoClienteTelaHome"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lblClienteTelaHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnClientesTelaHome"
        android:layout_toRightOf="@+id/btnClientesTelaHome"
        android:text="@string/lblClienteTelaHome"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
